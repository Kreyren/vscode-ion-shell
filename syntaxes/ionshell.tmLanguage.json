{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ion-shell",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ionshell",
          "match": "\\b(.|..|alias|and|bg|break|calc|case|cd|complete|continue|count|dirs|disown|drop|echo|else|end|eval|exec|exit|false|fg|fn|for|help|history|if|in|jobs|let|match|matches|mkdir|not|or|popd|pushd|pwd|read|set|source|status|suspend|test|time|true|unalias|wait|while\\b)"
        }
      ]
    },
    "comment": {
      "begin": "#",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.comment.ionshell"
        }
      },
      "end": "\\n",
      "name": "comment.line.number-sign.ionshell"
    },
    "strings": {
      "name": "string.quoted.double.ionshell",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.ionshell",
          "match": "\\\\."
        }
      ]
    },
    "singleQuoteString": {
      "name": "string.quoted.single.ionshell",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.ionshell",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.ion"
}
